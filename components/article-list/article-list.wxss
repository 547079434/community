.articles{
  width: 90%;
  margin: 30rpx auto;
  text-align: center;
}
.article-div{
  display: inline-block;
  width: 95%;
  overflow: hidden;
  border: 1rpx solid #33333380;
  box-shadow: 0px 0px 2px 0px rgba(51, 51, 51, 0.5);
  border-radius: 5rpx;
  padding: 15rpx;
  margin-bottom: 10rpx;
}
.article-title{
  width: 100%;
  overflow: hidden;
  color: #000000FF;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}
.article-content{
  width: 100%;
  overflow: hidden;
}
.article-abstract{
  width: 60%;
  float: left;
  margin-top: 10rpx;
  text-align: left;
  color: #33333380;
  font-size: 28rpx;
}
.articles image{
  width: 40%;
  height: 200rpx;
  display: block;
  float: right;
}