.articles{
  width: 90%;
  margin: 30rpx auto;
  text-align: center;
}
.article-div{
  display: inline-block;
  width: 95%;
  overflow: hidden;
  border: 1rpx solid #33333380;
  box-shadow: 0px 0px 2px 0px rgba(51, 51, 51, 0.5);
  border-radius: 5rpx;
  padding: 15rpx;
  margin-bottom: 10rpx;
}
.article-title{
  width: 100%;
  overflow: hidden;
  color: #000000FF;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}
.article-content{
  width: 100%;
  overflow: hidden;
  position: relative;
}
.article-abstract{
  width: 60%;
  float: left;
  margin-top: 10rpx;
  text-align: left;
  color: #33333380;
  font-size: 28rpx;
  overflow: hidden;
  max-height: 190rpx;
}
.article-author{
  width: 100%;
  float: left;
  margin-top: 10rpx;
  text-align: center;
  color: #666;
  font-size: 28rpx;
  overflow: hidden;
  height: 50rpx;
  display: inline-flex;
  line-height: 50rpx;
}
.author-head{
  float: left;
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
  border-radius: 50rpx;
}
.write-time{
  margin-left: 20rpx;
  font-size: 20rpx;
  color: #33333380;
}
.cover{
  width: 40%;
  max-height: 240rpx;
  display: block;
  float: right;
}
.article-count{
  position: absolute;
  bottom: -5rpx;
  left: 0;
}
.count{
  margin-right: 10rpx;
  float: left;
  color: #33333380;
  font-size: 26rpx;
  line-height: 32rpx;
}
.count image{
  float: left;
  width: 28rpx;
  height: 28rpx;
  margin-right: 5rpx;
}